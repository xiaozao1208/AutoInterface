<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.course1">
    <select id="getUserCount" resultType="Integer">
        select count(*) from test.user11;
    </select>

    <insert id="addUser" parameterType="com.course1.model.User">
        insert  into test.user11(id,name,age,sex) values(#{id},#{name},#{age},#{sex});
    </insert>

    <update id="updateUser" parameterType="com.course1.model.User">
        update test.user11 set name=#{name},age=#{age} where id=#{id}
    </update>

    <delete id="deleteUser" parameterType="Integer">
        delete from test.user11 where id=#{id}
    </delete>
</mapper>
